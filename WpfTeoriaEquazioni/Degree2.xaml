        <Button x:Name="bntCalcola" Content="Calcola" HorizontalAlignment="Left" Margin="269,190,0,0" VerticalAlignment="Top" Width="89" Click="bntCalcola_Click" Height="31" Background="Black" Foreground="#FF00E8FF"/>
        <Label Content="Inserisci il valore di a:" HorizontalAlignment="Left" Margin="117,126,0,0" VerticalAlignment="Top" Height="36" Width="126"/>
        <Label x:Name="lblRisultato" Content="" HorizontalAlignment="Left" Margin="128,240,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.5,-0.962" Width="230" Height="41" Background="White"/>
        <TextBox x:Name="txtA" HorizontalAlignment="Left" Height="36" Margin="248,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="142"/>
